<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainMenuActivity"
                android:nestedScrollingEnabled="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Image Capture"
        android:id="@+id/initiate_capture_button"
        android:onClick="initiateCapture"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Object Name:"
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:ems="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/model_name"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/initiate_capture_button"
        android:layout_alignEnd="@+id/initiate_capture_button"/>

</RelativeLayout>
