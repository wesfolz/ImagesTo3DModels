<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:opencv="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ece473.trekker.imagesto3dmodels.ImageCaptureActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/camera_view"
        opencv:camera_id="any" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture"
        android:id="@+id/capture_button"
        android:rotation="270"
        android:onClick="captureImage"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/capture_complete_button"
        android:rotation="270"
        android:onClick="captureComplete"
        android:layout_marginBottom="79dp"
        android:layout_above="@+id/capture_button"
        android:layout_alignRight="@+id/capture_button"
        android:layout_alignEnd="@+id/capture_button"/>

</RelativeLayout>
